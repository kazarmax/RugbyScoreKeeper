<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <!-- Primary theme color of the app (sets background color of app bar) -->
        <item name="colorPrimary">#FF9800</item>
        <!-- Background color of buttons in the app -->
        <item name="colorButtonNormal">#FF9800</item>
    </style>
    <style name="GeneralStyleForTextViews">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingTop">16dp</item>
    </style>
    <style name="TeamNameTextViews" parent="GeneralStyleForTextViews">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#616161</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>
    <style name="ScoreTextViews" parent="GeneralStyleForTextViews">
        <item name="android:textSize">56sp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:paddingBottom">24dp</item>
    </style>
    <style name="GeneralButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">24dp</item>
        <item name="android:layout_marginRight">24dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:onClick">updateScoresAndStatsForTeam</item>
    </style>
    <style name="PointCategoryLinearLayoutStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_marginLeft">28dp</item>
        <item name="android:layout_marginRight">28dp</item>
    </style>
    <style name="PointCategoryTextView">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#616161</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>
    <style name="PointValueTextView" parent="PointCategoryTextView">
        <item name="android:textColor">#000000</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:text">@string/initial_team_score</item>
    </style>
</resources>